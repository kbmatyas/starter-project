<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".RepositoryItemBinding">

        <variable
            name="repo"
            type="com.possible.demo.data.model.Repository" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/first_keyline"
            android:layout_marginTop="@dimen/content_padding"
            android:layout_marginEnd="@dimen/content_padding"
            android:ellipsize="end"
            android:text="@{repo.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/license"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Repo name" />

        <TextView
            android:id="@+id/license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/first_keyline"
            android:text="@{repo.license.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/name"
            tools:text="License" />

        <TextView
            android:id="@+id/start_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/first_keyline"
            android:drawableTop="@drawable/ic_star_24dp"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/content_padding"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/license"
            tools:text="14" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_padding"
            android:maxLines="3"
            android:text="@{repo.description}"
            app:layout_constraintEnd_toStartOf="@id/start_count"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="@tools:sample/lorem/random" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bottom_barrier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="description,start_count" />

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_padding"
            android:text="@{repo.language}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/start_count"
            app:layout_constraintTop_toBottomOf="@id/bottom_barrier"
            tools:text="Kotlin" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>