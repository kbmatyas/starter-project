<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".UserItemBinding">

        <variable
            name="user"
            type="com.possible.demo.data.model.User" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/first_keyline"
        android:paddingTop="@dimen/content_padding"
        android:layout_marginEnd="@dimen/first_keyline"
        android:paddingBottom="@dimen/content_padding"
        android:background="?selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_gravity="center"
            android:contentDescription="@string/content_desc_avatar"
            app:avatarUrl="@{user.avatarUrl}"
            tools:background="@tools:sample/avatars" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@{user.login}"
            android:layout_marginTop="@dimen/small_content_padding"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Matyas" />

    </LinearLayout>

</layout>