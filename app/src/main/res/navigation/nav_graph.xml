<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/followerListFragment">

    <fragment
        android:id="@+id/followerListFragment"
        android:name="com.possible.demo.feature.users.fragment.FollowerListFragment"
        tools:layout="@layout/fragment_follower_list">

        <action
            android:id="@+id/action_followerListFragment_to_repositoryListFragment"
            app:destination="@id/repositoryListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/repositoryListFragment"
        android:name="com.possible.demo.feature.users.fragment.RepositoryListFragment"
        tools:layout="@layout/fragment_repository_list">

        <argument
            android:name="username"
            app:argType="string" />
    </fragment>

</navigation>